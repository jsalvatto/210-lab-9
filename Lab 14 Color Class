#include <iostream>
#include <string>
#include <iomanip>
#include <vector>
#include <algorithm>
#include <numeric>
#include <limits>
#include <fstream>
using namespace std;
    
    class color{//created a class named color with 3 int variables
        private:
            int red;
            int green;
            int blue;
        public:// getters and setters, get returns the value listed and set stores the value
            int getRed()    {return red;}
            void setRed(int r) {red = r;}
            int getGreen()    {return green;}
            void setGreen(int g) {green = g;}
            int getBlue()    {return blue;}
            void setBlue(int b) {blue = b;}
            
        void print(){// print function outputs data in a neat manner
            cout<<"Red: "<<red<<endl;
            cout<<"Blue: "<<blue<<endl;
            cout<<"Green: "<<green<<endl;
        }
    };
    
    void print(color printcolor){
        cout<<printcolor.getRed()<<" "<<printcolor.getGreen()<<" "<<printcolor.getBlue()<<endl;
    }
    
    void display()//function to neatly seperate output for easier reading
    {
        int count;
            for (count = 0; count < 30; count++)
            {
                cout<<"_";
            } 
            {
                cout<<endl;
            }
    
    }
     
int main() {
   
    color apple;//apples are red
        apple.setRed(401);
        apple.setGreen(104);
        apple.setBlue(410);
        apple.print();
        print(apple);
        display();
        
    color grass;//grass is green
        grass.setGreen(301);
        grass.setRed(103);
        grass.setBlue(310);
        grass.print();
        display();
        
    color ocean;//water is wet
        ocean.setBlue(201);
        ocean.setRed(102);
        ocean.setGreen(210);
        ocean.print();
        display();

return 0;
}

void printf (color c){
    cout<<c.getRed()<<" ("<<c.getBlue()<<" ("<<c.getGreen()<<" ("<<endl;
}
